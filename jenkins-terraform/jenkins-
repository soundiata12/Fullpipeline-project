pipeline {
    agent any

    stages {
        stage('Install Terraform') {
            steps {
                script {
                    // Define the version of Terraform you want to install
                    def terraformVersion = "5.72.1"
                    def terraformUrl = "https://releases.hashicorp.com/terraform/${terraformVersion}/terraform_${terraformVersion}_linux_amd64.zip"

                    // Download Terraform
                    sh "curl -o terraform.zip ${terraformUrl}"

                    // Unzip the downloaded file
                    sh "unzip terraform.zip"

                    // Move the Terraform binary to /usr/local/bin
                    sh "sudo mv terraform /usr/local/bin/"

                    // Clean up the zip file
                    sh "rm terraform.zip"

                    // Verify installation
                    sh "terraform -version"
                }
            }
        }
    }
}

    
